{
    "name": "express-mod",
    "version": "1.2.1",
    "description": "A flexible web framework for building fast API (Application programming interface) and maintainable.",
    "scripts": {
        "ts-init": "npx tsc --init",
        "dev": "nodemon --watch ./example --exec ts-node -T ./example/index.ts",
        "build": "npm run clean  && npx tsc",
        "check-types": "npx tsc --pretty --noEmit",
        "lint": "eslint . --ext .ts --cache",
        "lint:fix": "eslint . --ext .ts --cache --fix",
        "check-format": "prettier --check ./**/*.ts",
        "format": "prettier --write ./**/*.ts",
        "clean": "rimraf ./dist ./.tsbuildinfo ./.eslintcache",
        "test": "jest",
        "publish": "npm publish --access public"
    },
    "keywords": [
        "http",
        "backend-api",
        "server-api",
        "restful-api",
        "rest-api",
        "api",
        "web-framework",
        "web",
        "app",
        "router-api"
    ],
    "author": "elierosie0 <elierosie0@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/elierosie0/express-mod.git"
    },
    "bugs": {
        "url": "https://github.com/elierosie0/express-mod/issues"
    },
    "homepage": "https://github.com/elierosie0/express-mod#readme",
    "files": [
        "./dist",
        "./LICENSE",
        "./README.md"
    ],
    "sideEffects": false,
    "dependencies": {
        "@types/express": "^4.17.21",
        "express": "^4.18.2",
        "reflect-metadata": "^0.2.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "eslint-plugin-prettier": "^5.1.2",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "zod": "^3.22.4"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{ts,js}": [
            "prettier --write --ignore-unknown"
        ]
    }
}
